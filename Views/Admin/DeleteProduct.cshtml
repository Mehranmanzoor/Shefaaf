@model ShefaafSpices.Web.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<div class="container mt-5">
    <h1 class="mb-4">Delete Product</h1>
    <h3>Are you sure you want to delete this product?</h3>
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@Model.Name</h5>
            <p class="card-text">@Model.Description</p>
            <p class="card-text">Price: $@Model.Price</p>
            <p class="card-text">Stock: @Model.StockQuantity</p>
            <p class="card-text">Category: @(Model.Category?.Name ?? "N/A")</p>
        </div>
    </div>

    <form asp-action="DeleteProduct" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger mt-3">Delete</button>
        <a asp-action="Index" class="btn btn-secondary mt-3">Cancel</a>
    </form>
</div>